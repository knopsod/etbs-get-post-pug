extend ../layout2
block content
  // Content Header (Page header)
  section.content-header
    h1
      | Permissions Management
  // Main content
  section.content
    .row
      .col-xs-12
        .box
          .box-header
            // h3.box-title Permissions Management
          // /.box-header
          .box-body.table-responsive
            p
              a(href='/etbs-permissions/add') New
            table#example.table.table-bordered.table-striped
              thead
                tr
                  th Permission
                  th Profile ID
                  th Permission Type
                  th Active
                  th(width=100)
              tbody
                each perm in permissions
                  tr
                    td= perm.permission
                    td= perm.profileid
                    td= perm.perm_type
                    td= perm.is_active
                    td(style='text-align: center')
                      a(href='/etbs-permissions/edit/' + perm.permission + '/' + perm.profileid + '/' + perm.perm_type) Edit
                      | -
                      a(href='/etbs-permissions/remove/' + perm.permission + '/' + perm.profileid + '/' + perm.perm_type) Remove
              tfoot
                tr
                  th Permission
                  th Profile ID
                  th Permission Type
                  th Active
                  th
          // /.box-body
        // /.box
  // /.content
  // jQuery
  script(src='https://code.jquery.com/jquery-3.1.1.min.js')
  // Bootstrap
  script(src='/AdminLTE-2.3.3/bootstrap/js/bootstrap.min.js', type='text/javascript')
  // DATA TABES SCRIPT
  script(src='/AdminLTE-2.3.3/plugins/datatables/jquery.dataTables.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/plugins/datatables/dataTables.bootstrap.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/dist/js/app.min.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/dist/js/demo.js', type='text/javascript')
  // page script
  script(src='/js/AdminLTE-2.3.3/tables/permissions.js',type='text/javascript')
