extend ../layout2
block content
  // Content Header (Page header)
  section.content-header
    h1
      | Roles Management
  // Main content
  section.content
    .row
      .col-xs-12
        .box
          .box-header
            // h3.box-title Roles Management
          // /.box-header
          .box-body.table-responsive
            p
              form(method='GET' action='/etbs-extensions')
                input(name='name' value=name)
            table#datatable-extensions.table.table-bordered.table-striped
              thead
                tr
                  th Extension
                  th Client ID
                  th Name
                  th Org ID
                  th Type
                  th License
                  th Budget
                  th Balance
                  th Tenant
                  th Authorization code
                  th Rent charge
                  th(width=100)
              tbody
                each extension in extensions
                  tr
                    td= extension.extension
                    td= extension.clientid
                    td= extension.name
                    td= extension.orgid
                    td= extension.exttype
                    td= extension.has_license
                    td= extension.budget
                    td= extension.balance
                    td= extension.tenant
                    td= extension.authorization_code
                    td= extension.rent_charge
                    td -
              tfoot
                tr
                  th Extension
                  th Client ID
                  th Name
                  th Org ID
                  th Type
                  th License
                  th Budget
                  th Balance
                  th Tenant
                  th Authorization code
                  th Rent charge
                  th
          // /.box-body
        // /.box
  // /.content
