extend ../layout2
block content
  // Content Header (Page header)
  section.content-header
    h1
      | Users Management
  // Main content
  section.content
    .row
      .col-xs-12
        .box
          .box-header
            // h3.box-title Users Management
          // /.box-header
          .box-body.table-responsive
            p
              a(href='/etbs-users/add') New
            table#example1.table.table-bordered.table-striped
              thead
                tr
                  th Username
                  th Client ID
                  th Role name
                  th Extension
                  th Name
                  th Logo
                  th Company
                  th Email
                  th Mobile
                  th Fax
                  th Active
                  th(width=100)
              tbody
                each user in users
                  tr
                    td= user.username
                    td= user.clientid
                    td= user.rolename
                    td= user.extension
                    td= user.name
                    td= user.logo
                    td= user.company
                    td= user.email
                    td= user.mobile
                    td= user.fax
                    td= user.is_active
                    td(style='text-align: center')
                      a(href='/etbs-users/edit/' + user.username) Edit
                      | -
                      a(href='/etbs-users/remove/' + user.username) Remove
              tfoot
                tr
                  th Username
                  th Client ID
                  th Role name
                  th Extension
                  th Name
                  th Logo
                  th Company
                  th Email
                  th Mobile
                  th Fax
                  th Active
                  th
          // /.box-body
        // /.box
  // /.content
