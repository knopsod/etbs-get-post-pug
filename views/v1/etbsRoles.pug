extend ../layout2
block content
  // Content Header (Page header)
  section.content-header
    h1
      | Roles Management
  // Main content
  section.content
    .row
      .col-xs-12
        .box
          .box-header
            // h3.box-title Roles Management
          // /.box-header
          .box-body.table-responsive
            p
              a(href='/etbs-roles/add') New
            table#example1.table.table-bordered.table-striped
              thead
                tr
                  th Role name
                  th Profile ID
                  th Active
                  th(width=100)
              tbody
                each role in roles
                  tr
                    td= role.rolename
                    td= role.profileid
                    td= role.is_active
                    td(style='text-align: center')
                      a(href='/etbs-roles/edit/' + role.rolename + '/' + role.profileid) Edit
                      | -
                      a(href='/etbs-roles/remove/' + role.rolename + '/' + role.profileid) Remove
                      
              tfoot
                tr
                  th Role name
                  th Profile ID
                  th Active
                  th
          // /.box-body
        // /.box
  // /.content
  // jQuery 2.2.0
  script(src='/AdminLTE-2.3.3/plugins/jQuery/jQuery-2.2.0.min.js')
  // Bootstrap 3.3.6
  script(src='/AdminLTE-2.3.3/bootstrap/js/bootstrap.min.js', type='text/javascript')
  // DataTables
  script(src='/AdminLTE-2.3.3/plugins/datatables/jquery.dataTables.min.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/plugins/datatables/dataTables.bootstrap.min.js', type='text/javascript')
  // SlimScroll
  script(src='/AdminLTE-2.3.3/plugins/slimScroll/jquery.slimscroll.min.js', type='text/javascript')
  // FastClick
  script(src='/AdminLTE-2.3.3/plugins/fastclick/fastclick.js', type='text/javascript')
  // AdminLTE App
  script(src='/AdminLTE-2.3.3/dist/js/app.min.js', type='text/javascript')
  // AdminLTE for demo purpose
  script(src='/AdminLTE-2.3.3/dist/js/demo.js', type='text/javascript')
  // page script
  script(src='/javascripts/tables/dataTables.js' type='text/javascript')
