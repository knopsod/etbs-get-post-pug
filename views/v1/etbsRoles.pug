extend ../layout2
block content
  // Content Header (Page header)
  section.content-header
    h1
      | Roles Management
  // Main content
  section.content
    .row
      .col-xs-12
        .box
          .box-header
            // h3.box-title Roles Management
          // /.box-header
          .box-body.table-responsive
            p
              a(href='/etbs-roles/add') New
            table#example.table.table-bordered.table-striped
              thead
                tr
                  th Role name
                  th Profile ID
                  th Active
                  th(width=100)
              tbody
                each role in roles
                  tr
                    td= role.rolename
                    td= role.profileid
                    td= role.is_active
                    td(style='text-align: center')
                      a(href='/etbs-roles/edit/' + role.rolename + '/' + role.profileid) Edit
                      | -
                      a(href='/etbs-roles/remove/' + role.rolename + '/' + role.profileid) Remove
                      
              tfoot
                tr
                  th Role name
                  th Profile ID
                  th Active
                  th
          // /.box-body
        // /.box
  // /.content
  // jQuery
  script(src='https://code.jquery.com/jquery-3.1.1.min.js')
  // Bootstrap
  script(src='/AdminLTE-2.3.3/bootstrap/js/bootstrap.min.js', type='text/javascript')
  // DATA TABES SCRIPT
  script(src='/AdminLTE-2.3.3/plugins/datatables/jquery.dataTables.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/plugins/datatables/dataTables.bootstrap.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/dist/js/app.min.js', type='text/javascript')
  script(src='/AdminLTE-2.3.3/dist/js/demo.js', type='text/javascript')
  // page script
  script(src='/js/AdminLTE-2.3.3/tables/roles.js',type='text/javascript')
